{% extends 'base.html.twig' %}
 {% block title%} Liste des Formations{% endblock %}
  {% block body %}
  
  
  
  
   {% if formations %}
   <table id="formations" class="table table-striped">
    <thead> <tr> <th>Nom formation</th> <th>Centre</th><th>Formateur</th><th>DateDebut</th><th>DateFin</th><th>Lieu</th><th>Employe</th> <th>Actions</th> </tr> </thead>
     <tbody> {% for formation in formations %} <tr> 
      <td>{{ formation.NomFormation }}</td>
      <td>{{ formation.Centre}}</td> 
      <td>{{ formation.Formateur}}</td> 
      <td>{{ formation.DateDebut}}</td> 
      <td>{{ formation.DateFin}}</td> 
      <td>{{ formation.Lieu}}</td> 
      <td>{{ formation.employe.cin }}</td>

     <td> <a href="/formation/show/{{ formation.id }}" class="btn btn-warning">Détails</a>
     <a href="/formation/edit/{{ formation.id }}" class="btn btn-success">Modifier</a>
     <a href="/formation/delete/{{ formation.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cette formation ?');">Supprimer</a>
     </td> </tr> {% endfor %} </tbody> </table> {% else %} <p>Aucun formations</p> {% endif %} {% endblock %}