{% extends 'base.html.twig' %}
 {% block title%} Liste des Employes{% endblock %}
  {% block body %}
  
  
  
  
   {% if employes %}
   <table id="employes" class="table table-striped">
    <thead> <tr> <th>Cin</th> <th>Nom</th><th>Prenom</th><th>Fonction</th><th>Direction</th><th>Salaire</th><th>Telephone</th><th>Email</th> <th>Actions</th> </tr> </thead>
     <tbody> {% for employe in employes %} <tr> 
     <td>{{ employe.Cin }}</td>
      <td>{{ employe.Nom }}</td>
      <td>{{ employe.Prenom}}</td> 
      <td>{{ employe.Fonction}}</td> 
      <td>{{ employe.Direction}}</td> 
      <td>{{ employe.Salaire}}</td> 
      <td>{{ employe.Telephone}}</td> 
       <td>{{ employe.Email}}</td> 
      

      <td>
      
      <a href="/employe/show/{{ employe.id }}" class="btn btn-warning">Détails</a>
      <a href="/employe/edit/{{ employe.id }}" class="btn btn-success">Modifier</a>
      <a href="/employe/delete/{{ employe.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cette employe ?');">Delete</a>
     </td> </tr> {% endfor %} </tbody> </table> {% else %} <p>Aucun employes</p> {% endif %} {% endblock %}